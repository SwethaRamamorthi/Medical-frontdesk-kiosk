rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Doctors – kiosk reads and seeds
    match /doctors/{docId} {
      allow read, write: if true;
    }

    // Patients – kiosk can read & write (self-service terminal, no user auth)
    match /patients/{patientId} {
      allow read, write: if true;
    }

    // Appointments – kiosk can create and read
    match /appointments/{apptId} {
      allow read, write: if true;
    }

    // QR Access Tokens – allow read, write
    match /qrAccess/{tokenId} {
      allow read, write: if true;
    }

    // Block everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
